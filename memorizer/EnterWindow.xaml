<Window x:Class="memorizer.EnterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:memorizer"
        mc:Ignorable="d"
        Title="" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" >
    <Window.Resources>
        <ResourceDictionary Source="Style.xaml" />
    </Window.Resources>
    
    <Grid>        
        <Grid.Background>
            <ImageBrush ImageSource="resources/fond3.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Border Background="White" Opacity="0.7" Margin="10">
            <StackPanel>
                <Label Content="Ваши ближайшие события" Height="35" FontSize="20" HorizontalAlignment="Center" 
                       FontWeight="Bold" FontStyle="Italic"  Foreground="DarkCyan"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Height="350">
                    <ListView Name="ObjectiveList" ItemsSource="{Binding ITEMS}" 
                              FontSize="20" FontWeight="Bold" FontStyle="Italic" Foreground="DarkSlateGray">
                        <ListView.View >
                            <GridView >
                                <GridViewColumn DisplayMemberBinding="{Binding Path=Date}" Width="150">Дата</GridViewColumn>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=Description}" Width="550">Описание</GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </ScrollViewer>
                <WrapPanel HorizontalAlignment="Center">
                    <Button x:Name="ButtonListManagement" Content="Перейти в список" Click="ButtonListManagement_Click"  
                                Style="{DynamicResource style_ButtonEntry}" />
                    <Button x:Name="Button_Exit" Content="Выйти" Click="Button_Exit_Click"      
                                Style="{DynamicResource style_ButtonEntry}" />
                </WrapPanel>   
            </StackPanel>
        </Border>
    </Grid>
</Window>
